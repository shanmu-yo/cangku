@model 课程安排.Models.coursemenagements
@using 课程安排.Models
@{
    ViewBag.Title = "Create";
    var teacher = (List<teacher>)ViewBag.teacher;
    var classs = (List<classes>)ViewBag.classes;
    var kebiao = (List<kebiao>)ViewBag.kebiao;
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>coursemenagements</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.classid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="classid" class="form-control">
                    @foreach (var classes in classs)
                    {
                        <option value="@classes.id">@classes.name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.courseid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="courseid" class="form-control">
                    @foreach (var course in kebiao)
                    {
                        <option value="@course.Id">@course.name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.teacherid, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="teacherid" class="form-control">
                    @foreach (var t in teacher)
                    {
                        <option value="@t.id">@t.name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
